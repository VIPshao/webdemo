<?xml version="1.0" encoding="UTF-8"?>
<!-- 数据权限配置 -->
<auths>
	<authType key="AUTHTYPE_DATA">
		<!-- 系统维护数据权限 -->
		<auth key="system_data_auth" name="系统维护数据权限" virtual="true">
			<auth key="virtualCenter" name="虚拟中心数据权限" virtual="true">
				<auth key="query_all_vc" name="查询所有虚中心" configAble="false"
					description="具有该权限能够查看所有的虚中心，否则仅能查看当前人员所在虚中心">
				</auth>
			</auth>
			<auth key="organization" name="组织数据权限" virtual="true">
				<auth key="query_all_org" name="查询所有组织" configAble="false"
					description="具有该权限能够查询所有的组织，否则仅能查询所属虚中心组织">
				</auth>
			</auth>
		</auth>

		<!-- demo的编辑权限，拥有该权限才能查询demo的列表，为增加，删除，修改的父权限 -->
		<!-- 此处不指定类型，则默认为操作权限 -->
		<auth key="credit_product" name="贷款产品数据权限" virtual="true">
			<auth key="cre_pro_queryCurrentOrg" name="查询所属组织的贷款产品"></auth>
			<auth key="cre_pro_queryCurrentPost" name="查询所属职位的贷款产品"></auth>
		</auth>
		<auth key="loan_cre" name="贷款预约产品数据权限" virtual="true">
			<auth key="query_cre_loan_cur_org" name="查询所属组织的贷款预约单"></auth>
			<auth key="query_cre_loan_cur_and_child_org" name="查询所属组织及其子级组织的贷款预约单"></auth>
		</auth>
	</authType>
</auths>